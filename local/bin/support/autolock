#!/usr/bin/env sh
exec xidlehook \
  --not-when-fullscreen \
  --not-when-audio \
  --timer 180 \
    'xrandr --output "$DISPLAY_DEVICE" --brightness .1' \
    'xrandr --output "$DISPLAY_DEVICE" --brightness 1' \
  --timer 60 \
    'xrandr --output "$DISPLAY_DEVICE" --brightness 1; multilockscreen -l' \
    '' \
  --timer 900 \
    'killall i3lock && multilockscreen -s' \
    ''
