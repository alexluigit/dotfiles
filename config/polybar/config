; vim:ft=dosini
; check polybar wiki for internal modules [https://github.com/polybar/polybar/wiki]
[color]
fg = #55f24829
bg = #55090b11
white = #80FFFFFF
black = #aa000000
shade1 = #bf000000
shade2 = #efbbbbbb
shade3 = #aa444444
shade4 = #aa5063a3
shade5 = #ee888888

[settings]
screenchange-reload = false
compositing-foreground = source
compositing-background = source
compositing-border = over
pseudo-transparency = false

[bar/bar]
monitor = ${env:DISPLAY_DEVICE:DP-0}
enable-ipc=true
height = 50
width = 100%
padding = 0
fixed-center = true
bottom = false
foreground = ${color.fg}
background = ${color.bg}
font-0 = Noto Sans CJK SC:style=Bold:size=24;4
font-1 = Noto Sans CJK SC:style=Regular:size=18;3
font-2 = Feather:style=Regular:size=24;5
font-3 = Font Awesome 5 Free:style=Regular:size=20;5
font-4 = Font Awesome 5 Free:style=Solid:size=20;5
font-5 = Font Awesome 5 Brands:style=Regular:size=20;5
wm-restack = bspwm
override-redirect = false
modules-left = launcher bspwm music
modules-right = pomo date pulseaudio sysmenu
dim-value = 1.0
tray-position = right
tray-padding = 2
tray-maxsize = 30
tray-background = ${color.shade2}

[module/launcher]
type=custom/text
content = %{T4}%{T-}
content-padding = 4
content-foreground = ${color.black}
content-background = ${color.shade2}
click-left = "launcher -a"

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-background = ${color.black}
format-padding = 4
index-sort = true
enable-click = true
reverse-scroll = false
enable-scroll = true
label-focused = %{T4}%{T-}
label-empty = %{T4}%{T-}
label-empty-foreground = ${color.shade4}
label-occupied = %{T4}%{T-}
label-occupied-foreground = ${color.shade4}
label-separator = "  "
scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev

[module/date]
type = internal/date
interval = 10
time = %H:%M
date = %b-%d
label = %{T1}%time%%{T-}  %{T2}%date%%{T-}
label-padding-left = 4
label-padding-right = 2
label-background = ${color.black}

[module/pomo]
type = custom/script
exec = "pomo state"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume>
format-volume-background = ${color.black}
format-volume-foreground = ${color.shade5}
use-ui-max = false
interval = 5
ramp-volume-0 = %{T3}   %{T-}
ramp-volume-1 = %{T3}   %{T-}
ramp-volume-2 = %{T3}   %{T-}
ramp-volume-3 = %{T4}  %{T-}
label-muted =   %{T3}   %{T-}
label-muted-foreground = ${color.shade4}
label-muted-background = ${color.black}

[module/sysmenu]
type = custom/text
content = %{T3}      %{T-}
content-foreground = ${color.shade5}
content-background = ${color.black}
click-left = ~/.config/rofi/scripts/powermenu

[module/music]
type = custom/script
format-margin = 4
format = %{T4}%{T-}   %{T2}<label>%{T-}
format-foreground = ${color.white}
exec = playerctl metadata --format '{{title}} - {{artist}}'
tail = true
interval = 2
click-left = "playerctl play-pause"
