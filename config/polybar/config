; check polybar wiki for internal modules
; https://github.com/polybar/polybar/wiki
[module/launcher]
type=custom/text
content = "  "
content-font = 2
content-margin = 2
click-left = "rofi-open drun"

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-margin = 2
index-sort = true
enable-click = true
reverse-scroll = false
enable-scroll = true
label-focused = %name%
label-focused-underline = ${colors.white}
label-focused-padding = 0
label-focused-font = 2
label-empty = %name%
label-occupied = %name%
label-occupied-padding = 0
label-occupied-underline = #555555
label-separator = " "
label-separator-padding = 1
scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev

[module/date]
type = internal/date
interval = 10
format-margin = 4
time = "%H:%M"
; date = "%b-%d"
label = %time%
label-background = ${colors.bg}
label-font = 2
label-padding = 2

[module/pomo]
type = custom/script
exec = "pomo state"

[module/cpu]
type = internal/cpu
format = <label>
label-margin = 4
label =    %percentage% 

[module/memory]
type = internal/memory
format = <label>
label =    %percentage_used% 

[module/pulseaudio]
type = internal/pulseaudio
format-volume-margin = 2
format-volume = <ramp-volume>
format-volume-padding = 2
use-ui-max = false
interval = 5
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
label-muted = " "
label-muted-foreground = "#666"
label-muted-padding = 4

[module/sysmenu]
type = custom/text
content = 
content-foreground = ${colors.white}
click-left = powermenu_alt

[module/music]
type = custom/script
format-margin = 4
format =     <label>
exec = music-control info
tail = true
interval = 2
click-left = "playerctl play-pause"

