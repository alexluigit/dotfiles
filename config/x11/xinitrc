#!/bin/sh
export DISPLAY_DEVICE=$(xrandr | awk '/ connected/{print $1}')
declare -r sxhkdrc_type=bspwm
xrdb -merge ~/.config/x11/xresources &

easystroke --config-dir ~/.config/easystroke &
sxhkd -m 1 -c ~/.config/sxhkd/rc-$sxhkdrc_type &
dunst &
fcitx5 &
flameshot &
autolock &
redshift &
picom --experimental-backends &
xwallpaper --output $DISPLAY_DEVICE --zoom $WALLPAPER &
polybar bar &
xsetroot -cursor_name left_ptr &

exec bspwm
