[colors]
FOREGROUND         = #d8dee9
BACKGROUND         = #2e3440
BACKGROUND_LIGHTER = #3b4252
BACKGROUND_DARKER  = #242831
RED                = #bf616a
GREEN              = #a3be8c
YELLOW             = #ebcb8b
BLUE               = #81a1c1
MAGENTA            = #b48ead
CYAN               = #88c0d0
WHITE              = #e5e9f0
GREY               = #4c566a
ORANGE             = #d08770
SUPER_CYAN         = #8fbcbb
SUPER_BLUE         = #5e81ac

[settings]
screenchange-reload = false
compositing-foreground = source
compositing-background = source
compositing-border = over
pseudo-transparency = false

[bar/bar]
monitor = ${env:DISPLAY_DEVICE:DP-0}
enable-ipc=true
height = 50
width = 100%
padding = 0
fixed-center = true
bottom = false
foreground = ${colors.FOREGROUND}
background = ${colors.BACKGROUND}
font-0 = Noto Sans CJK SC:style=Bold:size=22;4
font-1 = Noto Sans CJK SC:style=Regular:size=16;4
font-2 = Font Awesome 5 Free:style=Regular:size=18;4
font-3 = Font Awesome 5 Free:style=Solid:size=18;4
font-4 = Font Awesome 5 Brands:style=Regular:size=18;4
font-5 = VictorMono Nerd Font:size=22;6
override-redirect = false
modules-left = launcher ewmh music
modules-right = date volume sysmenu
dim-value = 1.0

[module/launcher]
type=custom/text
content = %{T3}%{T-}
content-padding = 4
content-foreground = ${colors.CYAN}
content-background = ${colors.BACKGROUND}
click-left = "rofi -show run -theme ~/.config/rofi/themes/dmenu.rasi"

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
index-sort = true
format = <label-state>
format-padding = 2
format-background = ${colors.BACKGROUND_DARKER}
label-active = %{T3}%name%%{T-}
label-active-padding = 2
label-focused-foreground = %{colors.SUPER_BLUE}
label-empty = %{T3}%name%%{T-}
label-empty-padding = 2
label-empty-foreground = ${colors.GREY}
label-occupied = %{T3}%name%%{T-}
label-occupied-padding = 2
label-occupied-foreground = ${colors.BLUE}

[module/date]
type = internal/date
interval = 10
time = %H:%M
date = %b-%d
label = %{T1}%time%%{T-}  %{T2}%date%%{T-}
label-foreground = ${colors.GREEN}
label-padding-left = 4
label-padding-right = 4
label-background = ${colors.BACKGROUND_DARKER}

[module/pomo]
type = custom/script
exec = "pomo state"

[module/volume]
type = internal/pulseaudio
format-volume = %{T6}  %{T-}%{T1}<bar-volume>%{T-}
format-volume-background = ${colors.BACKGROUND_DARKER}
format-volume-foreground = ${colors.SUPER_CYAN}
format-volume-padding = 4
format-muted  = %{T6}  %{T-}%{T1}<bar-volume>%{T-}
format-muted-background = ${colors.BACKGROUND_DARKER}
format-muted-foreground = ${colors.BLUE}
format-muted-padding = 4
label-volume = %percentage%%
bar-volume-width = 6
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-indicator-foreground = ${colors.BLUE}
bar-volume-fill = ━
bar-volume-foreground-0 = ${colors.YELLOW}
bar-volume-empty = ━
bar-volume-empty-foreground = ${colors.BACKGROUND_LIGHTER}
click-right = alacritty -e "pavucontrol"

[module/sysmenu]
type = custom/text
content = %{T4}     %{T-}
content-foreground = ${colors.CYAN}
content-background = ${colors.BACKGROUND}
click-left = ~/.local/bin/x/powermenu

[module/music]
type = custom/script
format-margin = 4
format = %{T3}%{T-}   %{T2}<label>%{T-}
format-foreground = ${colors.WHITE}
exec = playerctl metadata --format '{{title}} - {{artist}}'
tail = true
interval = 2
click-left = "playerctl play-pause"

