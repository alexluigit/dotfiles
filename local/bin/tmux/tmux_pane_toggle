#!/usr/bin/env sh
if [[ $(tmux display -p "#{window_panes}") -eq 1 ]]; then
  tmux split-window -h -c '#{pane_current_path}'
elif [[ $(tmux display -p "#{pane_index}") -eq 0 ]]; then
  pane_width=$(tmux display -p "#{pane_width}")
  window_width=$(tmux display -p "#{window_width}")
  [[ $pane_width == $window_width ]] && tmux resize-pane -Z \; select-pane -R \
  || tmux resize-pane -Z
else
  tmux select-pane -L \; resize-pane -Z
fi
