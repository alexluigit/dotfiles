#!/bin/bash
rofi_command="rofi -theme $HOME/.config/rofi/themes/powermenu_alt.rasi"

uptime=$(uptime -p | sed -e 's/up //g')

# Options
shutdown="           Shutdown"
reboot="           Restart"
lock="           Lock"
suspend="           Sleep"
logout="           Logout"

# Variable passed to rofi
options="$lock\n$suspend\n$logout\n$reboot\n$shutdown"

chosen="$(echo -e "$options" | $rofi_command -p "  $uptime" -dmenu -selected-row 0)"
case $chosen in
    $shutdown)
        systemctl poweroff
        ;;
    $reboot)
        systemctl reboot
        ;;
    $lock)
        betterlockscreen -l
        ;;
    $suspend)
        mpc -q pause
        systemctl suspend
        ;;
    $logout)
        killall Xorg
        ;;
esac
