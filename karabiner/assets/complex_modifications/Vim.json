{
  "title": "Vim",
  "rules": [
    {
      "description": "F1 + hjkl to arrow keys Vim",
      "manipulators": [
        {
          "from": {
            "simultaneous": [
              {
                "key_code": "h"
              },
              {
                "key_code": "f1"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "f1"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [
              {
                "key_code": "k"
              },
              {
                "key_code": "f1"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [
              {
                "key_code": "l"
              },
              {
                "key_code": "f1"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Right cmd to control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.googlecode.iterm2$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
