{
  "title": "Hyphen and Equal",
  "rules": [
    {
      "description": "Post Hyphen if left Cmd is pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "hyphen"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Post Equal if right Cmd is pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "equal_sign"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Post percent sign if left Option is pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "5",
              "modifiers": ["left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Post caret if right Option is pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "6",
              "modifiers": ["left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Escape -> Command+Control+Opt+/",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "slash",
              "modifiers": ["command", "control", "option"]
            }
          ]
        }
      ]
    }
  ]
}
