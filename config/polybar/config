[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = "DP-0"
enable-ipc=true
height = 50
width = 100%
padding = 0
fixed-center = true
bottom = false
foreground = ${color.fg}
background = ${color.bg}
line-size = 2
font-0 = SF Compact Display:style=Regular:size=20;5
font-1 = SF Compact Display:style=Semibold:size=25;5
font-2 = Noto Sans CJK SC:style=Regular:size=25;5
font-3 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=20;5
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=20;5
font-5 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:size=20;5
font-6 = "SFMono Nerd Font Mono:size=25;5"
font-7 = "SFMono Nerd Font Mono:size=30;7"
font-8 = Noto Sans CJK SC:style=Regular:size=18;3
wm-restack = bspwm
override-redirect = false
modules-left = launcher bspwm music
modules-right = pomo systray-fix date pulseaudio sysmenu
dim-value = 1.0
tray-position = center
