configuration {
    font:                           "Iosevka Nerd Font 20";
    show-icons:                     false;
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
    hide-scrollbar:                 true;
    sidebar-mode:                   false;
    location:                       3;
}

@import "colors_dark.rasi"

window {
    transparency:                   "real";
    background-color:               @background;
    text-color:                     @foreground;
    border-radius:                  8px;
    height:                         330px;
    width:                          10%;
    x-offset:                       -12;
    y-offset:                       12;
}

prompt {
    enabled:                        true;
    padding:                        4px 4px 6px 40px;
    margin:                         4px 4px 6px 40px;
    background-color:               @background;
    text-color:                     @foreground;
    font:                           "SF Compact Display SemiBold 24";
}

textbox-prompt-colon {
    expand:                         false;
    str:                            "ï›ƒ";
    background-color:               @background;
    text-color:                     @logo;
    padding:                        5px 0px 0px 40px;
    margin:                         4px 4px 6px 20px;
}

inputbar {
    children:                       [ textbox-prompt-colon, prompt ];
    background-color:               @background;
    text-color:                     @foreground;
    expand:                         false;
    border:                         0px 0px 1px 0px;
    border-color:                   @border;
    margin:                         0px 0px 0px 0px;
    padding:                        0px 0px 0px 0px;
    position:                       center;
}

listview {
    background-color:               @background;
    columns:                        1;
    spacing:                        4px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @background;
    children:                       [ inputbar, listview ];
    spacing:                        5px;
    padding:                        5px 5px 5px 5px;
}

element {
    background-color:               @background;
    text-color:                     @foreground;
    orientation:                    horizontal;
    border-radius:                  4px;
    padding:                        6px 6px 6px 6px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0;
    margin:                         0px 0px 0px 100px;
}

element selected {
    background-color:               @selected;
    text-color:                     @background;
    border:                         0px;
    border-radius:                  20px;
    border-color:                   @border;
}
