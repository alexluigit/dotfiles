# Focus
super + {_,shift + } {1-7}
	bspc {desktop -f,node -d} ^{1-7}
super + control + {1-7}
	bspc node -d ^{1-7} --follow
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
super + s
	bspc node -s biggest.local || bspc node -s next.local
super + f
	bspc desktop -l next
super + Tab
        bspc node focused -f next
super + grave
	bspc desktop last --focus

# Window size
hyper + {h,j,k,l}
	bspc node --presel-dir '~{west,south,north,east}'
hyper + {2-9}
	bspc node -o 0.{2-9}
hyper + space
	bspc node -p cancel
hyper + super + {h,j,k,l}
	bsp_resize {west,south,north,east} 50
hyper + {e, b}
	bspc node @/ -{E,B}
hyper + f
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled
hyper + {y,u,i,o}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# Launch
super + {w,m}
	chromium-open {newtab,music}
super {_,shift + ctrl + alt} + r
	rofi-open app {combi,drun}
super + {e, v}
	alacritty {_,-e vifmrun}
super + o; {n}
	nautilus
super + {_,shift} q
	xdo {close,kill}
super + Escape
	powermenu_alt
super + shift + BackSpace
	pkill -USR1 -x sxhkd
shift + Delete
	systemctl suspend

# Media
XF86Audio{Prev,Play,Next}
	music-control {previous,play-pause,next}
hyper + XF86Audio{Prev,Play}
	music-control {shuffle ON,loop Track}
XF86Audio{LowerVolume,RaiseVolume,Mute}
	pactl set-sink-{volume $SOUND_DEVICE -8%,volume $SOUND_DEVICE +8%,mute $SOUND_DEVICE toggle}
hyper {_, + shift} + Escape
	flameshot {gui,full -p ~/Pictures/Screenshots}

# Miscs
button{8,9}
	xdotool key {'Control_L+w','Control_L+t'}
XF86MonBrightnessDown
	xvkbd -xsendevent -text "\[F1]"
XF86KbdBrightnessDown
	xvkbd -xsendevent -text "\[F5]"
hyper + XF86AudioRaiseVolume
	xvkbd -xsendevent -text "\[F12]"
