super + {Tab,f}
	{bspc node -f last,bspc desktop -l next}
super + {h,n,e,i}
	d={west,south,north,east}; xvimux $d || bspc node -f $d
super + {_,hyper +} {1-5}
	bspc {desktop -f,node -d} ^{1-5}
hyper + {h,n,e,i}
	{d1=left;d2=right;dx=-40;dy=0,d1=bottom;d2=top;dx=0;dy=40, \
	d1=top;d2=bottom;dx=0;dy=-40,d1=right;d2=left;dx=40;dy=0}; \
	bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

super + {r,s,t,q}
	{rofi -show run, bravectl start, alacritty, xdo close}
