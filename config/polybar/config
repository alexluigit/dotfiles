tray-maxsize = 30
tray-offset-x = 1510
tray-background = ${color.systray}

; check polybar wiki for internal modules [https://github.com/polybar/polybar/wiki]
[module/launcher]
type=custom/text
content = ""
content-padding = 4
content-foreground = ${color.black}
content-background = ${color.shade2}
click-left = "launcher -a"

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-background = ${color.black}
format-padding = 4
index-sort = true
enable-click = true
reverse-scroll = false
enable-scroll = true
label-focused = ◉
label-empty = 
label-empty-foreground = ${color.shade4}
label-occupied = 
label-occupied-foreground = ${color.shade4}
label-separator = " "
label-separator-padding = 1
scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev

[module/date]
type = internal/date
interval = 10
time = "%H:%M"
date = "%b-%d  "
label = %time%  %{T1}%date%%{T-}
label-padding-left = 4
label-padding-right = 2
label-background = ${color.black}
label-font = 2

[module/systray-fix]
type = custom/text
content = " "
content-padding = 5
content-background = ${color.systray}

[module/pomo]
type = custom/script
exec = "pomo state"

[module/pulseaudio]
type = internal/pulseaudio
format-volume-margin = 0
format-volume = <ramp-volume>
format-volume-padding = 4
format-volume-background = ${color.shade2}
format-volume-foreground = ${color.black}
use-ui-max = false
interval = 5
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
label-muted = ""
label-muted-foreground = ${color.fg}
label-muted-background = ${color.shade2}
label-muted-padding = 4

[module/sysmenu]
type = custom/text
content = "      "
content-padding = 0
content-foreground = ${color.black}
content-background = ${color.shade2}
click-left = powermenu

[module/music]
type = custom/script
format-margin = 4
format =    <label>
format-foreground = ${color.white}
label-font = 9
exec = music-control info
tail = true
interval = 2
click-left = "playerctl play-pause"

[settings]
screenchange-reload = false
compositing-background = screen
