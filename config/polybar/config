[colors]
; ARGB color (e.g. #f00, #ff992a, #ddff1023)
bg = #FF000000
fg = #000000
ac = #FEC006
trans = #00000000
white = #FFFFFF
black = #000000
greshade8 = #EEEEEE

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = "DP-0"
enable-ipc=true
height = 35
width = 100%
; offset-x = 1%
padding = 5
fixed-center = true
; bottom = true
background = ${colors.bg}
foreground = ${colors.greshade8}
border-size = 0
border-top-size = 10
border-bottom-size = 5
border-color = ${colors.bg}
line-size = 2
font-0 = SF Compact Display:style=Regular:size=22;2
font-1 = SF Compact Display:style=Semibold:size=22;2
font-2 = Noto Sans CJK SC:style=Regular:size=18;2
font-3 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=18;2
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=18;2
font-5 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:size=18;2
font-6 = VictorMono Nerd Font:style=Semibold:size=20;2
wm-restack = bspwm
override-redirect = false
modules-left = launcher bspwm xwindow
modules-center = date
modules-right = music pulseaudio sysmenu

[module/launcher]
type=custom/text
content = "  "
content-font = 7
content-margin = 2
click-left = ~/.config/polybar/scripts/launcher

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-empty =
label-empty-font = 2
label-font = 2
format-margin = 2

[module/bspwm]
type = internal/bspwm
format = <label-state>
format-margin = 2
index-sort = true
enable-click = true
reverse-scroll = false
enable-scroll = true
label-focused = %name%
label-focused-underline = ${colors.white}
label-focused-padding = 2
label-focused-font = 1
label-empty =
label-urgent =
label-urgent-padding = 6
label-occupied = %icon%
label-occupied-padding = 3
scroll-up = bspwm-wsnext
scroll-down = bspwm-wsprev
ws-icon-0 = Dev;
ws-icon-1 = Web;
ws-icon-2 = Doc;
ws-icon-3 = Music;
ws-icon-default = 

[module/date]
type = internal/date
interval = 10
format-margin = 4
time = "%H:%M"
; date = "%b-%d"
label = %time%
label-background = ${colors.bg}
label-font = 2
label-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
format-volume-margin = 2
format-volume = <ramp-volume>
format-volume-padding = 2
use-ui-max = false
interval = 5
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
label-muted = " "
label-muted-foreground = "#666"
label-muted-padding = 4

[module/sysmenu]
type = custom/text
content = 
content-foreground = ${colors.white}
click-left = ~/.config/polybar/scripts/powermenu_alt

[module/music]
type = custom/script
format-margin = 4
format =     <label>
exec = playerctl -p chrome metadata --format '{{title}} - {{artist}}'
tail = true
interval = 2
click-left = "playerctl play-pause"

